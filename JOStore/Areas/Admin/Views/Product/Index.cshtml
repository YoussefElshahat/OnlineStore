@model List<Product>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Products List
            </h2>
        </div>
        <div class="col-6 text-end align-content-md-center">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square-fill"></i> Craete New Product</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>

        <tr>
            <th>
                 Id
            </th>
            <th>
                 Name
            </th>
            <th>
                 Price
             </th>
             <th>
                Description
             </th>
             <th>
                 Category
             </th>
                <th>
                    ImageUrl
                </th>
        </tr>
    </thead>
    <tbody>
    @foreach(var obj in Model.OrderBy(x => x.Id))
    {
      <tr>
        <td>@obj.Id</td>
        <td>@obj.Name</td>
        <td>@obj.Price</td>
        <td>@obj.Description</td>
        <td>@obj.CategoryId</td>
        <td>@obj.ImageUrl</td>
        <td>
            <div class="w-75 btn-group" role="group">
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" >
                                <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                </a>
            </div>
        </td>
      </tr>
    }
</tbody>
</table>
</div>