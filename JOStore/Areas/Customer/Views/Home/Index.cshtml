@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 pb-3">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @if(product.ProductImages != null && product.ProductImages.Count > 0){
                         
                            <img src="@product.ProductImages.FirstOrDefault().ImageUrl" 
                                class="card-img-top rounded" alt="@product.Name" /> 
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" alt="@product.Name" />
                        }
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning text-center">@product.Price.ToString("c")</p>
                            </div>
                        </div>
                        <a asp-action="Details" asp-route-ProductId="@product.Id"
                           class="btn btn-primary bg-gradient border-0 form-control">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
